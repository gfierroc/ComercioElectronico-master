@model ComercioElectronico.Models.Login

@{
    ViewBag.Title = "Login";
}

<div class="col-md-12">
    <hgroup class="title">
        <h2>@ViewBag.Title.</h2>
        <p> Registra tus credenciales</p>
    </hgroup>
</div>

<div class="col-md-6">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.ValidationSummary(true, "Por favor intentar nuevamente.")

        <div class="col-md-12">
            <div class="col-md-4 editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="col-md-4 editor-field">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
        </div>
        <div>&nbsp;</div>
        <div class="col-md-12">
            <div class="col-md-4 editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="col-md-4 editor-field">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div>&nbsp;</div>
        <div class="col-md-12 mt-5">
            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "col-md-1" })
            @Html.LabelFor(m => m.RememberMe, new { @class = "col-md-3 checkbox" })
            <div class="col-md-3 text-right">
                <input type="submit" value="Ingresar" class="btn btn-default" />
            </div>
        </div>
        
        <div class="col-md-12">
            @Html.ActionLink("Registrate", "Register") si no tienes una cuenta.
        </div>
    }
</div>
